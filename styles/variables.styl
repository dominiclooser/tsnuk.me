//
// typography
//
baseFontSize = 16px
baseLineHeight = 1.4
scaleFactor = 1.3
sansFont = bebas-neue, sans-serif
sansFont2 = museo-sans
serifFont = 'EB Garamond'
bodyFont = sansFont2
headerFont = sansFont2

unit = baseLineHeight * baseFontSize

//
// breakpoints
//
bigScreen = '(min-width: 50em)'

//
// colors
//
dark = rgba(0,0,0,0.87)
color1 = #A4E49F  // green
color2 = #37ADE2 // blue

baseBackground = inherit
buttonColor = dark
softBorderColor = grey

pageHeaderBackground = baseBackground
pageHeaderColor = dark

//
// misc
//

baseBorder = 1px solid baseColor
maxPageWidth = 40 * unit
